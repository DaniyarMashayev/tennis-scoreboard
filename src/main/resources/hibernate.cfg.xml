<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!--  ========= НАСТРОЙКА ПОДКЛЮЧЕНИЯ К БАЗЕ ДАННЫХ  ========= -->
        <!-- Драйвер БД -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:mem:tennis-scoreboard-db;DB_CLOSE_DELAY=-1</property>

        <!-- Логин и пароль -->
        <property name="hibernate.connection.username">admin</property>
        <property name="hibernate.connection.password">admin</property>

        <!-- ========= НАСТРОЙКА HIBERNATE ========= -->

        <property name="hibernate.connection.pool_size">10</property>

        <!-- Диалект H2 -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- Показывать SQL в консоли (удобно для разработки) -->
        <property name="hibernate.show.sql">true</property>
        <property name="hibernate.format.sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <!-- Стратегия создания схемы:
             create-drop - создает и удаляет схему при старте/остановке
             update - обновляет схему при изменениях
             validate - только проверяет схему -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <!-- ========= РЕГИСТРАЦИЯ СУЩНОСТЕЙ ========= -->
        <!-- Здесь нужно перечислить все ваши классы-сущности -->
        <mapping class="org.example.tennisscoreboard.model.Player"/>
        <mapping class="org.example.tennisscoreboard.model.Match"/>


    </session-factory>
</hibernate-configuration>
